@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Edit</h2>
<hr />
<h4>Edit this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId) //pass Item ID to controller so it know which item to edit

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Ingredients)
    @Html.EditorFor(model => model.Ingredients)
    <br>
    @Html.LabelFor(model => model.Instructions)
    @Html.EditorFor(model => model.Instructions)
    <br>
    @Html.Label("Select Tag")
    @Html.DropDownList("TagId")

    <input type="submit" value="Save" class="btn"/>
}
<br>
<p>@Html.ActionLink("Back to list", "Index")</p>