@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h3>Add a new Recipe:</h3>
<hr />
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Ingredients)
    @Html.TextBoxFor(model => model.Ingredients)
    <br>
    @Html.LabelFor(model => model.Instructions)
    @Html.TextBoxFor(model => model.Instructions, new { type ="list" })
    <br>
    @Html.Label("Add Tag to recipe:")
    @Html.DropDownList("TagId")
    <br>
    <br>
    <input type="submit" value="Create Recipe" class="btn" />
}