@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h3>Add a new Recipe:</h3>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  <br>
  @Html.LabelFor(model => model.Ingredients)
  @Html.TextBoxFor(model => model.Ingredients, new { required = "required" })
  <br>
  @Html.LabelFor(model => model.Instructions)
  @Html.TextBoxFor(model => model.Instructions, new { type ="list", required = "required" })
    @* @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "email", required = "required" }) *@

  <br>
  @Html.Label("Add Tag to recipe:")
  @Html.DropDownList("TagId")  // for required: , null, htmlAttributes: new { @class = "form-control", required = "required" }
  <br>
  <br>
  <input type="submit" value="Create Recipe" class="btn" />
}