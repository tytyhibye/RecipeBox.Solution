@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag;

<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<hr />
@if (@Model.Recipes.Count == 0)
{
  <p>This Tag is not found in any recipes</p>
}
else
{
  <h3>Recipes using this tag:</h3>
  <ul>
  @foreach (var join in Model.Recipes)
  {
    <p>@join.Recipe.Name</p>
    @* <p>@Html.ActionLink($"{Recipe.Name}", "Details", new { id = recipe.RecipeId })</p> *@
  }
  </ul>
}
<br>
<p>@Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId }) | 
  @Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId })</p>